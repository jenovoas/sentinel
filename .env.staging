# ============================================
# STAGING ENVIRONMENT VARIABLES
# ============================================

# Environment
ENVIRONMENT=staging
DEBUG=true
LOG_LEVEL=DEBUG

# Domain
DOMAIN=staging.sentinel.example.com
PROTOCOL=https

# Database
DATABASE_URL=postgresql://sentinel:sentinel_staging_password@postgres:5432/sentinel_staging
POSTGRES_DB=sentinel_staging
POSTGRES_USER=sentinel
POSTGRES_PASSWORD=sentinel_staging_password

# Redis
REDIS_URL=redis://redis:6379/1
REDIS_PASSWORD=

# Loki
LOKI_URL=http://loki:3100
LOKI_TENANT_ID=sentinel-staging

# Mimir
MIMIR_URL=http://mimir:9009

# Prometheus
PROMETHEUS_URL=http://prometheus:9090

# Grafana
GRAFANA_URL=https://staging.sentinel.example.com:3000
GRAFANA_ADMIN_PASSWORD=staging_admin_change_me

# n8n
N8N_URL=https://staging.sentinel.example.com:5678
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=staging_n8n_password

# Security
SECRET_KEY=staging_secret_key_change_in_production_12345678
HMAC_SECRET=staging_hmac_secret_change_in_production_12345678
JWT_SECRET=staging_jwt_secret_change_in_production_12345678

# Data Retention
DATA_RETENTION_DAYS=7
LOG_RETENTION_DAYS=7
METRICS_RETENTION_DAYS=7

# Resource Limits
MAX_MEMORY_MB=4096
MAX_CPU_CORES=2

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=true

# Alerts (Business Hours Only)
ALERT_EMAIL=alerts@example.com
ALERT_SLACK_WEBHOOK=
ALERT_BUSINESS_HOURS_ONLY=true

# Cloudflare (Optional)
CLOUDFLARE_TUNNEL_TOKEN=
CLOUDFLARE_ZONE_ID=

# Feature Flags
ENABLE_HACKME_CHALLENGE=false
ENABLE_BUG_BOUNTY=false
ENABLE_PUBLIC_ACCESS=false

# Testing
ENABLE_FUZZER=true
ENABLE_CHAOS_TESTING=true
ENABLE_LOAD_TESTING=true

# Backup (Disabled for Staging)
ENABLE_BACKUPS=false
BACKUP_RETENTION_DAYS=0
